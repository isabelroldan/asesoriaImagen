<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="iesfranciscodelosrios.dam.imageconsulting.AppointmentController"
            prefHeight="400.0" prefWidth="600.0">


    <children>
        <Label text="Introducir cita" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label text="ID de cita:" layoutX="20.0" layoutY="60.0" />
        <TextField fx:id="idAppointmentField" layoutX="120.0" layoutY="60.0" prefHeight="25.0" prefWidth="100.0" />
        <Label text="Hora de inicio:" layoutX="20.0" layoutY="100.0" />
        <ComboBox fx:id="startTimeComboBox" onAction="#handleStartTimeComboBoxAction" layoutX="120.0" layoutY="100.0" prefWidth="100.0" />
        <Label text="Hora de fin:" layoutX="20.0" layoutY="140.0" />
        <ComboBox fx:id="endTimeComboBox" layoutX="120.0" layoutY="140.0" prefWidth="100.0" />
        <Label text="Fecha:" layoutX="20.0" layoutY="180.0" />
        <DatePicker fx:id="datePicker" layoutX="120.0" layoutY="180.0" />
        <Label text="ID de cliente:" layoutX="20.0" layoutY="220.0" />
        <TextField fx:id="idClientField" layoutX="120.0" layoutY="220.0" prefHeight="25.0" prefWidth="100.0" />
        <Label text="ID de espacio:" layoutX="20.0" layoutY="260.0" />
        <TextField fx:id="idSpaceField" layoutX="120.0" layoutY="260.0" prefHeight="25.0" prefWidth="100.0" />
        <Button fx:id="insertButton" onAction="#handleInsertAppointment" layoutX="20.0" layoutY="320.0" mnemonicParsing="false"  text="Insertar" />
        <Button fx:id="cancelButton" layoutX="100.0" layoutY="320.0" mnemonicParsing="false"  text="Cancelar" />
        <Label fx:id="errorLabel" layoutX="20.0" layoutY="360.0" textFill="RED" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

</AnchorPane>
